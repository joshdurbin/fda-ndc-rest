{
  "name": "fda-ndc-rest",
  "description": "FDA National Drug Registry REST service built atop Ratpack, RxMongo hosted at Heroku.",
  "keywords": [
    "groovy",
    "ratpack",
    "rxjava",
    "mongo",
    "rxmongo"
  ],
  "addons": [
    "mongolab:sandbox"
    "heroku-redis:hobby-dev"
  ],
  "env": {
    "BUILDPACK_URL": "https://github.com/heroku/heroku-buildpack-gradle",
    "JAVA_OPTS": "-Xmx384m -Xss512k -XX:+UseCompressedOops"
  }
}
